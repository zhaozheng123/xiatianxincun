.page{
  position:absolute;
  width:100%;
  height: 100%;
  left:0;
  top:0;
  background: #F8F4F4;
}
.up_area{
  position:relative;
  width:100%;
  left: 0;
  top: 0;
  background: #FFFFFF;
}
.myposition{
  position: relative;
  top: 0;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  left: 5%;
}
.icon{
  position: relative;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  height: 100%;
}
.icon image{
  width: 38rpx;
  height: 37rpx;
}
.text{
  height: 100%;
  margin-left: 20rpx;
  font-size: 0.9rem;
  color: #333333;
  letter-spacing:2rpx;
}
.video_area{
  position: relative;
  width: 90%;
  left: 5%;
  margin-top: 10rpx;
  height: 380rpx;
}
.title{
  position: relative;
  width: 90%;
  left: 5%;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.title image{
  position: relative;
  height: 32rpx;
  width: 40rpx;
  margin-left: 5rpx;
}
.title .text{
  position: relative;
  line-height: 80rpx;
  font-size: 0.9rem;
}
.state_area{
  position: relative;
  left: 125rpx;
  width: 500rpx;
  height: 178rpx;
  margin-top: 60rpx;
}
.state_area image{
  position:relative;
  width: 100%;
  height:100%;
}
.btn_area{
  position: relative;
  width: 500rpx;
  height: 80rpx;
  left: 125rpx;
  margin-top: 60rpx;
}
.btn_area1:active{
  transform: scale(0.9);
  transition-duration: 0.5s;
}
.btn_area1{
  position:relative;
  width:100%;
  height:100%;
}
.btn_area2{
  position:relative;
  width:100%;
  height:100%;
}
.btn_area image{
  position: relative;
  width: 100%;
  height: 100%;
}
.btn_area view{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  color:#FFFFFF;
  font-size: 1.1rem;
  letter-spacing: 2rpx;
}