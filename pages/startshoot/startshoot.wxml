<view class='page'>
  <view class="up_area">
    <view class="myposition">
      <image style="position:absolute;width:100%;height:100%" src="../../images/tipbg.png"></image>
        <view class="icon">
          <image src="../../images/position.png"></image>
          <view class="text">{{activity_name}}</view>
        </view>
    </view>
    <view class="video_area">
      <video style="width:100%;height:100%" src="{{example_src}}" loop autoplay control="{{false}}" objectFit="cover"></video>
    </view>
    <view class="title">
      <image src="../../images/media.png"></image>
      <view class="text">无人机教学视频<text style="color:#30BDFF">拍前必看</text></view>
    </view>
  </view>
  <view class="state_area">
    <image src="../../images/{{current_state}}.png"></image>
  </view>

  <view class="btn_area">
    <view class="btn_area1" wx:if="{{!isclicked}}" bindtap="startshoot">
      <image src="../../images/btn1.png"></image>
      <view>召唤无人机</view>
    </view>
    <view class="btn_area2" wx:if="{{isclicked}}">
      <image src="../../images/btn3.png"></image>
      <view>召唤无人机</view>
    </view>
  </view>

</view>

